<div class="container">
    <div class="bs-example">
        <form class="form-horizontal col-lg-offset-3" role="form">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Mesagem</label>
                <div class="col-sm-5">
                    <textarea class="form-control" rows="3" placeholder="Máximo de 140 Caracteres" id="msg-post"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" class="btn btn-success" id="enviar-twit">Enviar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $('#enviar-twit').click(function() {
        $.post('Post', { msg: $('#msg-post').val() }, function(data) {
            console.log(data);
        });
    });

</script>